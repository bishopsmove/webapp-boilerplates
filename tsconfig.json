{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "jsx": "preserve",
    "paths": {
      "~modules/*": ["server/modules/*"],
      "~shared/*": ["shared/*"]
    } 
  },
  "include": ["src/**/*.ts"],
  "exclude": [".next"]
}
